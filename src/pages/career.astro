// Sort by start date (newest first)
const sortedCareer = careerData.sort(
    (a, b) => new Date(b.startDate).valueOf() - new Date(a.startDate).valueOf(),
);

const getIcon = (type: string) => {
    switch (type) {
        case "job":
            return "briefcase";
        case "project":
            return "code";
        case "side-project":
            return "pencil-line";
        case "hackathon":
            return "trophy";
        default:
            return "star";
    }
};

const getTypeLabel = (type: string) => {
    switch (type) {
        case "job":
            return "Job";
        case "project":
            return "Project";
        case "side-project":
            return "Side Project";
        case "hackathon":
            return "Hackathon";
        default:
            return "Entry";
    }
};
---

<BaseLayout
    title="Career | Johannes Gnadlinger"
    description="My career history"
>
    <div class="stack gap-20">
        <main class="wrapper stack gap-8">
            <Hero
                title="Career"
                tagline="My professional journey, projects, and achievements."
                align="start"
            />

            <div class="timeline">
                {
                    sortedCareer.map((item) => (
                        <div class="timeline-item">
                            <div class="timeline-marker">
                                <div class="icon-wrapper">
                                    <Icon
                                        icon={getIcon(item.type) as any}
                                        size="1.2em"
                                    />
                                </div>
                            </div>
                            <div class="timeline-content card">
                                <div class="header">
                                    <span class="type-badge">
                                        {getTypeLabel(item.type)}
                                    </span>
                                    <span class="date">
                                        {item.startDate.split("-")[0]} -{" "}
                                        {item.endDate?.includes("-")
                                            ? item.endDate.split("-")[0]
                                            : item.endDate}
                                    </span>
                                </div>
                                <h3>{item.title}</h3>
                                <p class="organization">{item.organization}</p>
                                <p>{item.description}</p>
                            </div>
                        </div>
                    ))
                }
            </div>
        </main>
        <ContactCTA />
    </div>
</BaseLayout>

<style>
    .timeline {
        position: relative;
        display: flex;
        flex-direction: column;
        gap: 2rem;
        padding-left: 2rem;
        border-left: 2px solid var(--gray-800);
    }

    .timeline-item {
        position: relative;
    }

    .timeline-marker {
        position: absolute;
        left: -2rem; /* Adjust based on padding-left of timeline */
        top: 0;
        transform: translateX(-50%);
        width: 3rem;
        height: 3rem;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: var(--gray-999);
        border: 2px solid var(--gray-800);
        border-radius: 50%;
        z-index: 1;
    }

    .icon-wrapper {
        color: var(--accent-regular);
    }

    .timeline-content {
        margin-left: 1.5rem;
    }

    .card {
        border: 1px solid var(--gray-800);
        border-radius: 0.75rem;
        padding: 1.5rem;
        background-color: var(--gray-999_40);
        box-shadow: var(--shadow-sm);
        transition: box-shadow var(--theme-transition);
    }

    .card:hover {
        box-shadow: var(--shadow-md);
    }

    .header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.5rem;
        font-size: var(--text-sm);
    }

    .type-badge {
        background-color: var(--accent-regular);
        color: var(--accent-text-over);
        padding: 0.2rem 0.5rem;
        border-radius: 999rem;
        font-weight: bold;
        font-size: 0.8em;
        text-transform: uppercase;
    }

    .date {
        color: var(--gray-400);
    }

    .card h3 {
        font-size: var(--text-xl);
        color: var(--gray-0);
        margin-bottom: 0.25rem;
    }

    .organization {
        font-weight: bold;
        color: var(--accent-regular);
        margin-bottom: 0.5rem;
    }
</style>
