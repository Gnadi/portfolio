---
import type { CollectionEntry } from 'astro:content';

interface Props {
	contact: CollectionEntry<'contact'>;
}

const { data, slug } = Astro.props.contact;
---
<a class="card" href={data.title} target="_blank">
	<img src={data.img} alt={data.img_alt || ''} loading="lazy" decoding="async" />
</a>

<style>
	.card {
		padding: 5%;
		display: flex;
		justify-content: center;
		align-items: center;
		text-align: center;
	}

	.title {
		grid-area: 1 / 1 / 2 / 2;
		z-index: 1;
		margin: 0.5rem;
		padding: 0.5rem 1rem;
		background: var(--gray-999);
		color: var(--gray-200);
		border-radius: 0.375rem;
	}

	img {
		grid-area: 1 / 1 / 3 / 3;
		width: 100%;
		height: 100%;
		object-fit: contain;
	}

	@media (min-width: 50em) {
		.card {
			height: 22rem;
			border-radius: 1.5rem;
		}

		.title {
			border-radius: 0.9375rem;
		}
	}
</style>
